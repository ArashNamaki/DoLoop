<Application x:Class="DoLoop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DoLoop"
             xmlns:converters="clr-namespace:DoLoop.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Oreder really Matters???-->
                <ResourceDictionary Source="/Resources/Styles/Icons.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
            <converters:TaskTypeToIconConverter x:Key="TaskTypeToIconConverter"/>
            <converters:TaskTypeToBrushConverter x:Key="TaskTypeToBrushConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
