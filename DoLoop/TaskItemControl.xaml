<UserControl x:Class="DoLoop.TaskItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoLoop"
             mc:Ignorable="d">
    <Border x:Name="TaskItem" Style="{DynamicResource TaskItemSimpleStyles}" 
            MouseLeftButtonUp="TaskItem_MouseLeftButtonUp" MouseRightButtonUp="TaskItem_MouseRightButtonUp">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="ItmeIcon" Content="{Binding Icon}" Foreground="{Binding Color}" DockPanel.Dock="Left"/>
            <TextBlock Grid.Column="1" x:Name="ItemText" Text="{Binding Text}" Foreground="{Binding Color}"/>
            <Border Grid.Column="2">
                <Grid>
                    <TextBlock x:Name="ItemDeleteButtonEffect" Foreground="{Binding Color}" Background="{DynamicResource Transparent}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Opacity="0" Text="{StaticResource CloseIcon}">
                        <TextBlock.Effect>
                            <BlurEffect Radius="10" KernelType="Box"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Button x:Name="ItemDeleteButton" Content="{StaticResource CloseIcon}" Foreground="{Binding Color}"
                            MouseLeftButtonUp="ItemDeleteButton_MouseLeftButtonUp"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
