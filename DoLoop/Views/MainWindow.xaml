<Window x:Class="DoLoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoLoop"
        mc:Ignorable="d"
        Height="700" Width="500" MinHeight="450" MinWidth="250"
        Title="DoLoop" ResizeMode="CanResizeWithGrip" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Icon="{StaticResource AppLogoBaBack}" WindowStartupLocation="CenterOwner" 
        KeyDown="Window_KeyDown">

    <Grid Name="AppWindow" Style="{StaticResource WindowStyles}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Appbar-->
        <Grid Grid.Row="0" Name="AppBar" Style="{StaticResource AppBarStyles}" 
              MouseLeftButtonDown="AppBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label Style="{StaticResource AppTitle}" Content="DoLoop"/>
                </Grid>
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Name="MinimizeBtn" Template="{StaticResource MinimizeButton}" Click="MinimizeBtn_Click" ContentStringFormat="{StaticResource Minus}"/>
                    <Button Grid.Column="1" Name="CloseBtn" Template="{StaticResource CloseButton}" IsCancel="True" Click="CloseBtn_Click" ContentStringFormat="{StaticResource CloseIcon}"/>
                </Grid>
            </Grid>
        </Grid>
        
        <!--Active Tab-->
        <Grid Grid.Row="1" Name="ActiveTab" Style="{StaticResource ActiveTabStyles}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--ActiveBar-->
            <DockPanel Grid.Row="0" Name="ActiveBar" Style="{StaticResource ActiveBarStyles}">
                <Grid Margin="0,0,12,0">
                    <Button Name="BoardTitleIcon" Click="BoardTitleIcon_Click" Template="{DynamicResource BoardIconButton}" ContentStringFormat="{StaticResource Box}"/>
                </Grid>
                <DockPanel Name="ActiveList_Title" Style="{StaticResource ActiveListTitleStyles}">
                    <StackPanel Name="BoardTitle" DockPanel.Dock="Left" Orientation="Horizontal">
                        <Button Grid.Column="0" Template="{StaticResource MiniButton}" ContentStringFormat="{StaticResource Left}"/>
                        <TextBlock Grid.Column="1" Name="BoardTitleTxt" Style="{StaticResource BoardTitleTextStyles}" Text="BoardTitle"/>
                        <Button Grid.Column="2" Template="{StaticResource MiniButton}" ContentStringFormat="{StaticResource Right}"/>
                    </StackPanel>
                    <StackPanel Name="Date" DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Label Grid.Column="0" Name="Date_Day" Style="{StaticResource DateTextStyles}" Content="Sun"/>
                        <Label Grid.Column="1" Name="Date_Month" Style="{StaticResource DateTextStyles}" Content="jul 24"/>
                        <Label Grid.Column="2" Name="Date_Year" Style="{StaticResource DateTextStyles}" Content="2025"/>
                        <Button Grid.Column="3" Template="{StaticResource MiniButton}" ContentStringFormat="{StaticResource Pin}"/>
                    </StackPanel>
                </DockPanel>
            </DockPanel>

            <!--Main-->
            <Grid Grid.Row="1" Name="Main" Style="{StaticResource MainStyles}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--SideBar-->
                <Border Grid.Column="0" Name="SideBar" Visibility="Visible" Style="{DynamicResource SidebarTopLine}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="0"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Name="SideBar_Top">
                            <StackPanel Style="{StaticResource SidebarStackpanelTop}">
                                <Button Template="{StaticResource SecondBoardButton}" ContentStringFormat="{StaticResource Plus}"/>
                                <Button Template="{StaticResource SecondSmallBoardButton}" ContentStringFormat="{StaticResource Terminal}"/>
                                <Button Template="{StaticResource SecondSmallBoardButton}" ContentStringFormat="{StaticResource Target}"/>
                                <Button Template="{StaticResource SecondSmallBoardButton}" ContentStringFormat="{StaticResource ShoppingCart}"/>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Name="SideBar_Middle">

                        </Grid>
                        <Grid Grid.Row="2" Name="SideBar_Bottom">
                            <StackPanel Style="{StaticResource SidebarStackpanelBottom}">
                                <Button Template="{StaticResource SecondBoardButton}" ContentStringFormat="{StaticResource List}"/>
                                <Button Template="{StaticResource SecondBoardButton}" ContentStringFormat="{StaticResource Setting}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
                <!--MainPanel-->
                <Border Grid.Column="1" Style="{DynamicResource MainPanelStyles}">
                    <Grid Name="MainPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <!--Task List-->
                        <Grid Grid.Row="0" Name="TaskList">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="TaskItemList" Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Visible"
                                        CanVerticallyScroll="True" SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical" ScrollViewer.CanContentScroll="True" ClipToBounds="True" Grid.RowSpan="2">
                            </StackPanel>
                        </Grid>
                        <!--Inputbar-->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <!--Input field-->
                            <Grid Grid.Row="0" Name="InputType" Margin="0,6" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Border Style="{DynamicResource TaskInputStyles}">
                                        <TextBox Name="AddTaskInput" KeyDown="AddTaskInput_KeyDown"/>
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="1" VerticalAlignment="Center">
                                    <Button Name="AddTaskButton" Template="{StaticResource SecondBoardButton}" ContentStringFormat="{StaticResource Plus}"
                                            Click="AddTaskButton_Click"/>
                                </Grid>
                            </Grid>
                            <!--Task Types-->
                            <Grid Grid.Row="1" Name="TaskTypeGroup" Visibility="Visible">
                                <WrapPanel Style="{DynamicResource TaskTypeStyles}">
                                    <WrapPanel>
                                        <RadioButton x:Name="NormalTask" GroupName="TaskType" Template="{StaticResource TaskRadio}" 
                                                     BorderBrush="{DynamicResource NormalTask}" Background="{DynamicResource NormalTask}" IsChecked="True"/>
                                        <Label Template="{StaticResource TaskRadioIcon}" Content="{DynamicResource Coffee}" Foreground="{DynamicResource NormalTask}"/>
                                        <Label Template="{StaticResource TaskRadioText}" VerticalAlignment="Center"
                                               Content="Normal" Foreground="{DynamicResource NormalTask}"/>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <RadioButton x:Name="ImportantTask" GroupName="TaskType" Template="{StaticResource TaskRadio}" 
                                                     Background="{DynamicResource ImportantTask}" BorderBrush="{DynamicResource ImportantTask}"/>
                                        <Label Template="{StaticResource TaskRadioIcon}" Content="{DynamicResource AlertTriangle}" Foreground="{DynamicResource ImportantTask}"/>
                                        <Label Template="{StaticResource TaskRadioText}" VerticalAlignment="Center"
                                               Content="Important" Foreground="{DynamicResource ImportantTask}"/>
                                    </WrapPanel>
                                    <WrapPanel>
                                        <RadioButton x:Name="QuickTask" GroupName="TaskType" Template="{StaticResource TaskRadio}" 
                                                     Background="{DynamicResource QuickTask}" BorderBrush="{DynamicResource QuickTask}"/>
                                        <Label Template="{StaticResource TaskRadioIcon}" Content="{DynamicResource Zap}" Foreground="{DynamicResource QuickTask}"/>
                                        <Label Template="{StaticResource TaskRadioText}" VerticalAlignment="Center"
                                               Content="Quick" Foreground="{DynamicResource QuickTask}"/>
                                    </WrapPanel>
                                </WrapPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
