<Window x:Class="DoLoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoLoop"
        mc:Ignorable="d"
        Title="DoLoop" MinHeight="450" MinWidth="450"
        Height="700" Width="600" SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        Icon="{StaticResource AppLogoBaBack}" WindowStartupLocation="CenterOwner" MouseDown="DragWindow">
    
    <Border Style="{StaticResource WindowStyles}">
        <Grid Name="AppWindow" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Appbar-->
            <Grid Grid.Row="0" Name="AppBar" Style="{StaticResource AppBarStyles}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0" Margin="24,0" VerticalAlignment="Center">
                    <Image Source="{StaticResource AppLogo}" Width="14"/>
                    <Label Style="{StaticResource AppTitle}" Content="DoLoop"/>
                </WrapPanel>
                <Grid Grid.Column="1"/>
                <Button Grid.Column="2" Name="MinimizeBtn" VerticalAlignment="Center" HorizontalAlignment="Center" Template="{StaticResource AppbarMinimizeButton}" Click="MinimizeBtn_Click"/>
                <Button Grid.Column="3" Name="CloseBtn" Template="{StaticResource AppbarCloseButton}" IsCancel="True" Click="CloseBtn_Click"/>
            </Grid>

            <!--Active Tab-->
            <Grid Grid.Row="1" Name="ActiveTab" Style="{StaticResource ActiveTabStyles}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--ActiveBar-->
                <Grid Grid.Row="0" Name="ActiveBar" Style="{StaticResource ActiveBarStyles}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Name="ActiveList_Icon">
                        <Button Template="{StaticResource BoardButton}" ContentStringFormat="{StaticResource Box}"/>
                    </Grid>

                    <Grid Grid.Column="1" Name="ActiveList_Title" Style="{StaticResource ActiveListTitleStyles}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Name="BoardTitle" Style="{StaticResource BoardTitleStyles}">
                            <WrapPanel>
                                <Button Template="{StaticResource MenuButton}" Name="G" Content="{StaticResource Left}"/>
                                <TextBlock Name="BoardTitleTxt" Style="{StaticResource BoardTitleTextStyles}" Text="BoardTitle"/>
                                <Button Template="{StaticResource MenuButton}" Name="K" Content="{StaticResource Left}"/>
                            </WrapPanel>
                        </Grid>
                        <Grid Grid.Column="1" Name="Date" Style="{StaticResource DateStyles}">
                            <WrapPanel>
                                <TextBlock Name="Date_Day" Style="{StaticResource DateTextStyles}" Text="Sun"/>
                                <TextBlock Name="Date_Month" Style="{StaticResource DateTextStyles}" Text="jul 24"/>
                                <TextBlock Name="Date_Year" Style="{StaticResource DateTextStyles}" Text="2025"/>
                                <Button Template="{StaticResource MenuButton}" Name="R" Content="{StaticResource Left}"/>
                            </WrapPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <!--Main-->
                <Grid Grid.Row="1" Name="Main" Style="{StaticResource MainStyles}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10*"/>
                    </Grid.ColumnDefinitions>

                    <!--SideBar-->
                    <Grid Grid.Column="0" Name="SideBar" Style="{StaticResource SideBarStyles}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Name="SideBar_Top">
                            
                            <StackPanel Style="{StaticResource SidebarStackpanel}">
                                <Line/>
                                <Button Template="{StaticResource BoardButton}" ContentStringFormat="J"/>
                                <Button Template="{StaticResource BoardButton}" ContentStringFormat="J"/>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Name="SideBar_Middle">

                        </Grid>
                        <Grid Grid.Row="2" Name="SideBar_Bottom">

                        </Grid>
                    </Grid>

                    <!--MainPanel-->
                    <Grid Grid.Column="1" Name="MainPanel" Style="{StaticResource MainPanelStyles}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Name="TaskList">

                        </Grid>
                        <Grid Grid.Row="1" Name="InputBar">
                        </Grid>
                    </Grid>
                </Grid>
                
            </Grid>
        </Grid>
    </Border>
</Window>
