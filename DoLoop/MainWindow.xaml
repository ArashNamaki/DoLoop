<Window x:Class="DoLoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoLoop"
        mc:Ignorable="d"
        Title="DoLoop" MinHeight="450" MinWidth="450"
        Height="700" Width="600" SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip" WindowStyle="None"
        AllowsTransparency="True" Background="White"
        Icon="{StaticResource AppLogo}" WindowStartupLocation="CenterOwner">

    <Grid Name="AppWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Appbar-->
        <Grid Grid.Row="0" Name="AppBar" Margin="9,2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"/>
            <Grid Grid.Column="1"/>
            <Button Grid.Column="2" Name="MinimizeBtn" Template="{StaticResource AppbarMinimizeButton}" Click="MinimizeBtn_Click"/>
            <Button Grid.Column="3" Name="CloseBtn" Template="{StaticResource AppbarCloseButton}" IsCancel="True" Click="CloseBtn_Click"/>
        </Grid>

        <!--Active Tab-->
        <Grid Grid.Row="1" Name="ActiveTab" Margin="9,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--ActiveBar-->
            <Grid Grid.Row="0" Name="ActiveBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Name="ActiveList_Icon">

                </Grid>

                <Grid Grid.Column="1" Name="ActiveList_Title">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Name="BoardTitle">
                        <WrapPanel>
                            
                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Column="1" Name="Date">
                        <WrapPanel>

                        </WrapPanel>
                    </Grid>
                </Grid>

                <!--Main-->
                <Grid Grid.Row="1" Name="Main">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--SideBar-->
                    <Grid Grid.Column="0" Name="SideBar">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Name="SideBar_Top">

                        </Grid>
                        <Grid Grid.Row="1" Name="SideBar_Middle">

                        </Grid>
                        <Grid Grid.Row="2" Name="SideBar_Bottom">

                        </Grid>
                    </Grid>

                    <!--MainPanel-->
                    <Grid Grid.Column="1" Name="MainPanel">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Name="TaskList">

                        </Grid>
                        <Grid Grid.Row="1" Name="InputBar">

                        </Grid>
                    </Grid>
                </Grid>

            </Grid>


        </Grid>
        
    </Grid>
</Window>
