<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:System="clr-namespace:System;assembly=netstandard">

    <!--FontFaces-->
    <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>
    <FontFamily x:Key="PrimaryIcon">/Resources/Fonts/DoLoopV1.ttf#DoLoopV1</FontFamily>
        <System:Double x:Key="Body">14</System:Double>
    <System:Double x:Key="Tasks">16</System:Double>
    <System:Double x:Key="Titles">20</System:Double>

    <FontStyle x:Key="Italic">Italic</FontStyle>
    <FontStyle x:Key="Normal">Normal</FontStyle>

    <FontWeight x:Key="Thin">Thin</FontWeight>
    <FontWeight x:Key="SemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="Regular">Regular</FontWeight>
    
    <!--Font Icons-->
    <System:String x:Key="CloseIcon">N</System:String>
    <System:String x:Key="BookOpen">B</System:String>
    <System:String x:Key="AlertTriangle">A</System:String>
    <System:String x:Key="Check">C</System:String>
    <System:String x:Key="Down">D</System:String>
    <System:String x:Key="Globe">E</System:String>
    <System:String x:Key="Headphones">F</System:String>
    <System:String x:Key="Left">G</System:String>
    <System:String x:Key="Map">H</System:String>
    <System:String x:Key="Minus">I</System:String>
    <System:String x:Key="Plus">J</System:String>
    <System:String x:Key="Right">K</System:String>
    <System:String x:Key="Terminal">L</System:String>
    <System:String x:Key="Up">M</System:String>
    <System:String x:Key="Zap">N</System:String>
    <System:String x:Key="ShoppingCart">O</System:String>
    <System:String x:Key="Edit">P</System:String>
    <System:String x:Key="Pin">Q</System:String>
    <System:String x:Key="List">R</System:String>
    <System:String x:Key="Box">S</System:String>
    <System:String x:Key="Compass">T</System:String>
    <System:String x:Key="Coffee">U</System:String>
    <System:String x:Key="Trash">V</System:String>
    <System:String x:Key="Target">W</System:String>
    <System:String x:Key="Setting">Y</System:String>

    
    <!--Colors-->
    <Color x:Key="UIColor">#8AEA92</Color>
    <Color x:Key="UIShadow">#118AEA92</Color>
    <Color x:Key="UI_BackgroundColor">#031104</Color>
    <Color x:Key="UI_ForegroundColor">#031104</Color>
    <Color x:Key="NormalColor">#B9ED97</Color>
    <Color x:Key="ImportantColor">#6BD425</Color>
    <Color x:Key="QuickColor">#F2BB05</Color>
    <Color x:Key="UI_Transparent">#00000000</Color>

    <SolidColorBrush x:Key="UIForeground" Color="{StaticResource UI_ForegroundColor}"/>
    <SolidColorBrush x:Key="UIElements" Color="{StaticResource UIColor}"/>
    <SolidColorBrush x:Key="UIBackground" Color="{StaticResource UI_ForegroundColor}"/>
    <SolidColorBrush x:Key="UIOverlay" Color="{StaticResource UIShadow}"/>
    <SolidColorBrush x:Key="Transparent" Color="{StaticResource UI_Transparent}"/>
    <SolidColorBrush x:Key="Button" Color="{StaticResource UIColor}"/>
    <SolidColorBrush x:Key="ButtonIcon" Color="{StaticResource UI_ForegroundColor}"/>
    <SolidColorBrush x:Key="Icons" Color="{StaticResource UIColor}"/>
    <SolidColorBrush x:Key="NormalTask" Color="{StaticResource NormalColor}"/>
    <SolidColorBrush x:Key="ImportantTask" Color="{StaticResource ImportantColor}"/>
    <SolidColorBrush x:Key="QuickTask" Color="{StaticResource QuickColor}"/>

    <!--Appbar-->
    <Style x:Key="AppbarButtonStyles" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>

        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="TextBlock.FontFamily" Value="{StaticResource PrimaryIcon}"/>
        <Setter Property="TextBlock.Background" Value="{StaticResource Transparent}"/>
        <Setter Property="TextBlock.Foreground" Value="{StaticResource UIElements}"/>
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>


        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource UIOverlay}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Appbar Buttons-->
    <ControlTemplate x:Key="AppbarCloseButton" x:Name="AppClose" TargetType="Button">
        <Border Style="{StaticResource AppbarButtonStyles}">
             <TextBlock Text="{StaticResource CloseIcon}"/>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="AppbarMinimizeButton" x:Name="AppMinimize" TargetType="Button">
        <Border Style="{StaticResource AppbarButtonStyles}">
            <TextBlock Text="{StaticResource Minus}"/>
        </Border>
    </ControlTemplate>

    
    <!--Main-->
    <!--Window Styles-->
    <Style x:Key="WindowStyles" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource UIBackground}"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>



    <Style x:Key="NormalTask_NoStyleStyles" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource NormalTask}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{StaticResource Body}"/>
        <Setter Property="FontStyle" Value="{StaticResource Italic}"/>
        <Setter Property="FontWeight" Value="{StaticResource Regular}"/>
    </Style>
    <ControlTemplate x:Key="NormalTask_NoStyle" TargetType="Label">
        <Border Padding="2,2">
            <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="{StaticResource CoffeeDrawingImage}"/>
                <Label Grid.Column="1" Style="{StaticResource NormalTask_NoStyleStyles}" Padding="8,0" Content="heeeeelp"/>
                <Image Grid.Column="2" Source="{StaticResource XDrawingImage}" Stretch="UniformToFill" Width="8" Height="8"/>
            </Grid>
        </Border>
    </ControlTemplate> 

</ResourceDictionary>