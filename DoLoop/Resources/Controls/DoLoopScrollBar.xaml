<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="InvisibleRepeatButton" TargetType="RepeatButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Focusable" Value="False" />
    </Style>

    <!-- thumb style (rounded, subtle) -->
    <Style x:Key="SlimThumb" TargetType="Thumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border x:Name="ThumbRoot"
                  CornerRadius="2"
                  Width="3"
                  Background="#10FFFFFF"
                  SnapsToDevicePixels="True"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbRoot" Property="Background" Value="#55FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbRoot" Property="Background" Value="#88FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- the full ScrollBar style -->
    <Style TargetType="ScrollBar" x:Key="SlimScrollBar">
        <Setter Property="Width" Value="2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid SnapsToDevicePixels="True" Background="Transparent">
                        <Track x:Name="PART_Track"
                   IsDirectionReversed="True"
                   Focusable="false">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Style="{StaticResource InvisibleRepeatButton}"
                              Command="ScrollBar.PageUpCommand" />
                            </Track.DecreaseRepeatButton>

                            <Track.Thumb>
                                <Thumb Style="{StaticResource SlimThumb}" />
                            </Track.Thumb>

                            <Track.IncreaseRepeatButton>
                                <RepeatButton Style="{StaticResource InvisibleRepeatButton}"
                              Command="ScrollBar.PageDownCommand" />
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- convenience: apply the slim scrollbar to both orientations -->
    <Style TargetType="ScrollBar" x:Key="SlimVerticalScrollBar" BasedOn="{StaticResource SlimScrollBar}">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Width" Value="2"/>
    </Style>

    <Style TargetType="ScrollBar" x:Key="SlimHorizontalScrollBar" BasedOn="{StaticResource SlimScrollBar}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Height" Value="2"/>
    </Style>
</ResourceDictionary>